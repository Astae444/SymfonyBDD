{% extends 'base.html.twig' %}

{% block title %}Chatons de la catégorie {{ categorie.titre }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="container">
        <h1>Chatons de la catégorie {{ categorie.titre }}</h1>
        <div class="row">
            {% for c in chatons %}
                <div class="col col-3">
                    <div class="card"><img src="{{ c.photo }}" alt="" class="card-img-top">
                        <div class="card-body">
                            <h2 class="card-title">{{ c.nom }}</h2>
                            <a href="{{ path("chaton_supprimer",{"id":c.id}) }}" class="btn btn-danger">supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a href="{{ path("chaton_ajouter") }}" class="mt-5 btn btn-primary">Ajouter un chaton</a>
    </div>
{% endblock %}
